<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/forget_top_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tps_register_tabbar"
            android:layout_gravity="center_horizontal">

        <ImageButton
                android:id="@+id/forget_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:src="@drawable/tps_register_back"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forget_password"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/mix_forget_account"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/tps_login_account"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        <EditText
                android:id="@+id/forget_user"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#00000000"
                android:layout_marginLeft="60dp"
                android:hint="@string/forget_account_hint_text"
                android:textSize="15sp"
                android:textColorHint="#dddddd"
                android:inputType="textEmailAddress"/>
    </RelativeLayout>

    <ImageView
            android:id="@+id/forget_account_line"
            android:src="@drawable/line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <RelativeLayout
            android:id="@+id/mix_forget_phone_mail"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/tps_forget_phone_mail"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        <EditText
                android:id="@+id/forget_phone_mail"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#00000000"
                android:layout_marginLeft="60dp"
                android:hint="@string/forget_phone_mail_hint_text"
                android:textSize="15sp"
                android:textColorHint="#dddddd"
                android:inputType="textEmailAddress"/>

    </RelativeLayout>

    <ImageView
            android:id="@+id/forget_phone_mail_line"
            android:src="@drawable/line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    <RelativeLayout
            android:id="@+id/mix_forget_password"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/tps_login_password"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="30dp">

            <EditText
                    android:id="@+id/forget_password"
                    android:background="#00000000"
                    android:layout_marginLeft="60dp"
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:hint="@string/register_password_hint_text"
                    android:textSize="15sp"
                    android:textColorHint="#dddddd"
                    android:inputType="textPassword"/>

            <TextView
                    android:id="@+id/forget_password_strength"
                    android:text="@string/register_password_strength_0"
                    android:visibility="gone"
                    android:textColor="@color/password_strength_0"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
            android:id="@+id/forget_password_line"
            android:src="@drawable/line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
            android:id="@+id/mix_forget_verify"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:src="@drawable/tps_register_verify"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                <EditText
                        android:id="@+id/forget_verify_code"
                        android:background="#00000000"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:hint="@string/forget_verify_code_hint_text"
                        android:textSize="15sp"
                        android:textColorHint="#dddddd"
                        android:inputType="number"/>
            </RelativeLayout>

            <ImageView
                    android:id="@+id/forget_verify_line"
                    android:src="@drawable/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        
        <Button
                android:id="@+id/forget_verify_button"
                android:text="@string/forget_gain_verify_code_hint_text"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/tps_register_loginbtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
    </LinearLayout>

    <Button
            android:id="@+id/forget_reset_password"
            android:text="@string/forget_reset_password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/tps_register_loginbtn"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

</LinearLayout>