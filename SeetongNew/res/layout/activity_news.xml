<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#fff0efed"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/news_tabbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tps_register_tabbar"
            android:layout_gravity="center_horizontal">

        <ImageButton
                android:id="@+id/news_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:src="@drawable/tps_register_back"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <TextView
            android:text="news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/news_test"
            android:text="news_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ListView
            android:id="@+id/news_list"
            android:divider="@color/device_grid_div_line"
            android:dividerHeight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </ListView>

</LinearLayout>