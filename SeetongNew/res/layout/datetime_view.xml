<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@drawable/backgrounds">
    <LinearLayout android:id="@+id/ll_title" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/tv_year" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                  android:gravity="center" android:text="@string/tv_year" android:textSize="18sp"/>
        <TextView android:id="@+id/tv_month" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                  android:gravity="center" android:text="@string/tv_month" android:textSize="18sp"/>
        <TextView android:id="@+id/tv_day" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                  android:gravity="center" android:text="@string/tv_day" android:textSize="18sp"/>
        <TextView android:id="@+id/tv_hour" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                  android:gravity="center" android:text="@string/tv_hour" android:textSize="18sp"/>
        <TextView android:id="@+id/tv_minute" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                  android:gravity="center" android:text="@string/tv_minute" android:textSize="18sp"/>
        <TextView android:id="@+id/tv_second" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                  android:gravity="center" android:text="@string/tv_second" android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:baselineAligned="false" android:background="@drawable/backgrounds"
                  android:layout_below="@+id/ll_title">
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/backgrounds"
                    android:orientation="horizontal" android:baselineAligned="false">
                <LinearLayout android:id="@+id/ll_year" android:layout_width="0dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                    <!--<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:gravity="center" android:text="年"/>-->
                    <ListView
                            android:id="@+id/id_year"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:dividerHeight="0dp"
                            android:divider="@null"
                            android:listSelector="#00000000">

                    </ListView>
                </LinearLayout>

                <LinearLayout android:id="@+id/ll_month" android:layout_width="0dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                    <!--<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:gravity="center" android:text="月"/>-->
                    <ListView
                            android:id="@+id/id_month"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:divider="@null"
                            android:listSelector="#00000000">

                    </ListView>
                </LinearLayout>

                <LinearLayout android:id="@+id/ll_day" android:layout_width="0dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                    <!--<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:gravity="center" android:text="日"/>-->
                    <ListView
                            android:id="@+id/id_day"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:divider="@null"
                            android:listSelector="#00000000">

                    </ListView>
                </LinearLayout>
                <LinearLayout android:id="@+id/ll_hour" android:layout_width="0dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                    <!--<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:gravity="center" android:text="时"/>-->
                    <ListView
                            android:id="@+id/id_hour"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:divider="@null"
                            android:listSelector="#00000000">

                    </ListView>
                </LinearLayout>
                <LinearLayout android:id="@+id/ll_minute" android:layout_width="0dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                    <!--<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:gravity="center" android:text="分"/>-->
                    <ListView
                            android:id="@+id/id_mitune"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:divider="@null"
                            android:listSelector="#00000000">

                    </ListView>
                </LinearLayout>
                <LinearLayout android:id="@+id/ll_second" android:layout_width="0dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                    <!--<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:gravity="center" android:text="秒"/>-->
                    <ListView
                            android:id="@+id/id_second"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:divider="@null"
                            android:listSelector="#00000000">

                    </ListView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
                <ImageView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                        android:background="@drawable/datetime_effect"/>
                <TextView android:layout_width="match_parent" android:layout_height="30dp"/>
                <ImageView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                           android:background="@drawable/datetime_effect"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal" android:gravity="center"
                      android:paddingTop="20dp">
            <Button android:id="@+id/btn_ok" android:layout_width="90dp" android:layout_height="wrap_content" android:text="@string/ok"/>
            <TextView android:layout_width="40dp" android:layout_height="wrap_content"/>
            <Button android:id="@+id/btn_cancel" android:layout_width="90dp" android:layout_height="wrap_content" android:text="@string/cancel"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>